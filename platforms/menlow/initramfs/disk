# Unified squash hdd filesystem mounting		  -*- shell-script -*-

mountroot ()
{
    mkdir -p /container
    mkdir -p /squashmnt
    mkdir -p /persistmnt

    if [ ! -e "/dev/hda2" ]; then
	if [ -z "${ROOTDELAY}" ]; then
	    slumber=180
	else
	    slumber=${ROOTDELAY}
	fi
	while [ ! -e "/dev/hda2" ]; do
	    /bin/sleep 0.1
	    slumber=$(( ${slumber} - 1 ))
	    [ ${slumber} -gt 0 ] || break
	done
    fi

    mount /dev/hda1 /container 
    mount -o loop -t squashfs /container/rootfs.img /squashmnt

    mount /dev/hda2 /persistmnt

    modprobe -Qb unionfs
    mount -t unionfs -o dirs=/persistmnt=rw:/squashmnt=ro none ${rootmnt}

}
